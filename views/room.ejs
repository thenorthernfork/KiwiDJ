<% layout('layout') -%>
<script src="/socket.io/socket.io.js"></script>
<script src="http://connect.soundcloud.com/sdk.js"></script>
<script>var roomName = '<%= room %>';</script>
<script src="/javascripts/room.js"></script>
<div id="players" style="width: 100%; height:512px; padding: 5px">
	<div id="ytwrapper" style="width: 1px;height: 1px;margin-left:auto;margin-right:auto;position:relative">
		<div style="position:absolute; width: 100%; height: 100%; z-index: 1; filter:alpha(opacity=50); opacity:0.5;">

		</div>
		<div style="position:absolute; width: 100%; height: 100%; z-index: 0;">
			<object 
				width="100%" 
				height="100%" 
				type="application/x-shockwave-flash" 
				data="http://www.youtube.com/apiplayer?enablejsapi=1&amp;version=3&amp;playerapiid=ytplayer&amp;hd=1&amp;showinfo=0" 
				id="ytplayer">
				<param name="allowfullscreen" value="true" />
				<param name="allowScriptAccess" value="always" />
			</object>
		</div>
	</div>
	<canvas id="canvas" style="width: 0px; height:0px;margin-left: -5px">Your browser doesnt support HMTL canvas!</canvas>
</div>
<div class="roomBox" style="width:75%">
	<div id="chat" class="scrollY" style="height:70px;font-size: 0.7em">
		
	</div>
	<div id="people" class="scrollY" style="height:70px; display: none">
	</div>
	<hr class="noMargin">
	<div style="margin-top:5px; margin-bottom:5px">
		<form id="chatForm" style="float:left">
			<input id="chatMessage" type="text" name="chat" autocomplete="off">
			<input id="chatSend" type="submit" value="Send">
		</form>
		<input id="chatToggle" type="button" value="People" style="float:right">
	</div>
</div>
<div class="roomBox right scrollY" style="width:20%">
	<img id="album" src="/images/logo-512.png" width="64" height="auto" align="left" style="margin-right: 3px"/>	
	<h3 class="noMargin" style="font-size:0.75em">Now Playing</h3>
	<i class="icon-music"></i> <span id="songTitle">Title</span>
	<hr class="noMargin">
	<i class="icon-pencil"></i> <span id="songArtist">Artist</span>
	<hr class="noMargin">
	<p id="duration" class="noMargin bottom left" style="font-size:0.9em">0:00/0:00</p>
	<p class="noMargin bottom right" style="font-size:0.9em"><a id="source" href="">Unknown</a> <i id="source-icon" class="icon-question"></i></p>	
</div>